<Page x:Class="IOBusMonitor.AppSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      Background="White">

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Title -->
            <TextBlock Text="⚙️ Application Settings"
                       FontSize="48"
                       FontWeight="Bold"
                       Foreground="#FF1D4D9A"/>

            <Separator Height="4"/>

            <!-- Read Interval -->
            <StackPanel Orientation="Horizontal" Margin="20">
                <TextBlock Text="Read Interval (ms):"
                           Width="300"
                           FontSize="32"
                           VerticalAlignment="Center"/>
                <hc:NumericUpDown x:Name="intervalInput"
                                  Width="400"
                                  Height="50"
                                  Minimum="500"
                                  Maximum="10000"
                                  Increment="100"
                                  FontSize="28"/>
            </StackPanel>

            <!-- Auto-start -->
            <StackPanel Orientation="Horizontal" Margin="20">
                <TextBlock Text="Auto start:"
                           Width="300"
                           FontSize="32"
                           VerticalAlignment="Center"/>
                <CheckBox x:Name="autoStartInput"
                          Width="50"
                          Height="50"/>
            </StackPanel>

            <!-- Data Path -->
            <StackPanel Orientation="Horizontal" Margin="20">
                <TextBlock Text="Data path:"
                           Width="300"
                           FontSize="32"
                           VerticalAlignment="Center"/>
                <TextBox x:Name="pathDataInput"
                         Width="400"
                         Height="50"
                         FontSize="28"/>
                <Button Content="…"
                        Width="50"
                        Height="50"
                        Margin="10,0,0,0"
                        Click="BrowseFolder_Click"/>
            </StackPanel>

            <!-- Save Button -->
            <Button Content="💾 Save"
                    Width="300"
                    Height="70"
                    HorizontalAlignment="Center"
                    Margin="0,40,0,0"
                    Click="Save_Click"
                    Background="#FF2C73C9"
                    Foreground="White"
                    FontSize="28"/>
        </StackPanel>
    </Grid>
</Page>
