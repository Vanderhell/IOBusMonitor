<Page x:Class="IOBusMonitor.AboutApp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AboutApp">

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Title -->
            <TextBlock Text="ℹ️ About IOBusMonitor"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="#FF1D4D9A"
                       TextAlignment="Center"
                       Margin="0,1,0,10"/>

            <Separator/>

            <!-- Version & copyright -->
            <TextBlock Text="Version: 1.0.0"
                       FontSize="24"
                       Foreground="Gray"
                       TextAlignment="Center"/>
            <TextBlock Text="Copyright © 2025 IOBusMonitor Team"
                       FontSize="22"
                       Foreground="Gray"
                       TextAlignment="Center"/>

            <Separator/>

            <!-- Description -->
            <TextBlock Text="IOBusMonitor monitors Modbus (RTU/TCP) and Siemens S7 I/O buses."
                       FontSize="24"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Foreground="#FF1D4D9A"
                       Margin="0,5"/>
            <TextBlock Text="Features include asynchronous data polling, SQLite storage and advanced charting."
                       FontSize="24"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Foreground="#FF1D4D9A"/>

            <Separator/>
        </StackPanel>
    </Grid>
</Page>
